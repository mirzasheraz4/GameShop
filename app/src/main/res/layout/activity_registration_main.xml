<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationMain"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/CancelRL">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="22dp"
            android:layout_alignParentRight="true"
            android:padding="8dp"
            android:layout_marginRight="5dp"
            android:textColor="@color/BasicAppColor"
            android:onClick="Cancel_Registration"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="100dp"
        android:id="@+id/LogoRL">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/logo"
            android:layout_centerInParent="true"
            android:id="@+id/LogoIV"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/btnRL"
        android:layout_below="@+id/LogoRL"
        android:layout_marginTop="40dp">
        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:id="@+id/GmailsignUpbtn"
            android:background="@drawable/gmail_signup_btn"
            android:text="Sign Up with Gmail"
            android:drawableLeft="@drawable/google_logo"
            android:textSize="14sp"
            android:layout_marginLeft="80dp"/>
        <Button
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:id="@+id/mailsignUpbtn"
            android:layout_below="@id/GmailsignUpbtn"
            android:background="@drawable/signup_btn"
            android:text="Sign Up with Email"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="80dp"
            android:onClick="SignUpUsingEmail"/>
    </RelativeLayout>
    <Button
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/btnRL"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:text="Log In"
        android:background="@color/colorPrimary"
        android:onClick="loginUser"/>

</RelativeLayout>