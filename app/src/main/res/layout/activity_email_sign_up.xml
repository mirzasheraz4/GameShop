<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmailSignUp"
    android:background="@color/colorPrimary">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/TopRL">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backTV"
            android:text="Back"
            android:textSize="22dp"
            android:layout_alignParentLeft="true"
            android:padding="8dp"
            android:layout_marginLeft="5dp"
            android:textColor="@color/BasicAppColor"
            android:onClick="back"
            />
        <TextView
            android:id="@+id/SignUpTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="170dp"
            android:layout_marginBottom="0dp"
            android:padding="8dp"
            android:text="Sign Up"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="24dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/formRL"
        android:layout_below="@id/TopRL"
        android:layout_marginTop="100dp">
        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="55dp"
            android:id="@+id/textLL"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email*"
                android:layout_marginTop="15dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed-light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password*"
                android:layout_marginTop="45dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed-light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="First Name"
                android:layout_marginTop="40dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed-light"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Name"
                android:layout_marginTop="40dp"
                android:textSize="18sp"
                android:fontFamily="sans-serif-condensed-light"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/textLL"
            android:orientation="vertical"
            android:id="@+id/deatilsLL">

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/emailET"
                android:background="@drawable/edit_text"
                android:inputType="textEmailAddress"
                android:layout_marginTop="8dp"
                android:fontFamily="sans-serif-condensed-light"/>

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:id="@+id/passwordET"
                android:inputType="textPassword"
                android:background="@drawable/edit_text"
                android:fontFamily="sans-serif-condensed-light"
                />
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:id="@+id/fNameET"
                android:background="@drawable/edit_text"
                android:inputType="text"
                android:fontFamily="sans-serif-condensed-light"/>
            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_marginTop="25dp"
                android:inputType="text"
                android:id="@+id/lNameET"
                android:background="@drawable/edit_text"
                android:fontFamily="sans-serif-condensed-light"/>
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/SignUpbtn"
        android:layout_below="@id/formRL"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/signup_btn"
        android:text="Sign Up"
        android:textColor="@color/colorPrimary"
        android:textSize="16sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_below="@id/SignUpbtn"
        android:text="* required"
        android:layout_marginTop="20dp"
        android:textColor="@color/BasicAppColor"
        android:textSize="16sp"/>
    <ProgressBar
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/signUpProgressBar"
        android:layout_centerInParent="true"
        android:background="@color/BasicAppColor"
        android:visibility="invisible"/>

</RelativeLayout>